<div class="container">

  <h1 class="text-center mb-4">All Restaurants</h1>
  <div class="row mb-5">
    <% @restaurants.each do |restaurant| %>
      <div class="col-md-3 mb-4">
        <%= link_to restaurant_path(restaurant), class: "text-decoration-none text-black" do %>
          <div class="card h-100">
            <img src="https://picsum.photos/200/300" alt="" class="card-img-top">
            <div class="card-body">
              <h2 class="card-title"><%= restaurant.name %></h2>
              <p class="card-text"><%= restaurant.category %></p>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div> 
